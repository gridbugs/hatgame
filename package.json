{
  "name": "hatgame",
  "version": "1.0.0",
  "description": "A social game about describing words",
  "scripts": {
    "build:server": "webpack --config webpack.config.server.js --mode development",
    "build:client": "webpack --config webpack.config.client.js --mode development",
    "watch:server": "webpack --config webpack.config.server.js --mode development --watch",
    "watch:client": "webpack --config webpack.config.client.js --mode development --watch",
    "build": "npm run build:client && npm run build:server",
    "serve": "npm run build:server && node ./dist/app.js",
    "start": "node ./dist/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/stevebob/hatgame.git"
  },
  "author": "Stephen Sherratt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stevebob/hatgame/issues"
  },
  "homepage": "https://github.com/stevebob/hatgame#readme",
  "dependencies": {
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/express-socket.io-session": "^1.3.4",
    "@types/node": "^14.14.36",
    "@types/socket.io": "^2.1.13",
    "@types/socket.io-client": "^1.4.36",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-webpack-plugin": "^2.5.3",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-socket.io-session": "^1.3.5",
    "fp-ts": "^2.9.5",
    "html-webpack-plugin": "^5.3.1",
    "io-ts": "^2.2.16",
    "preact": "^10.5.13",
    "socket.io": "^4.0.0",
    "socket.io-client": "^4.0.0",
    "ts-loader": "^8.0.18",
    "typescript": "^4.2.3",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0",
    "webpack-node-externals": "^2.5.2"
  }
}
